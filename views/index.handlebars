<h1>Eat a burger!</h1>

<div class = "burgersToEat">
<h2>You can eat these burgers</h2>
  <ul>
    {{#each burgers}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type = "submit">Devour it</button>
        </form>
      </li>
    {{/each}}
  </ul>
</div>

<div class = "devouredBurgers">
  <h2>These burgers have all been ate</h2>
  <ul>
    {{#each devouredBurgers}}
      <li>
        {{this.burger_name}}
      </li>
    {{/each}}
  </ul>
</div>

<form method ="post" action="/">
  <input type="text" name="burger_name">
  <button type="submit">Add burger</button>
</form>
